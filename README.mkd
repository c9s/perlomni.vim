    seekdir see


    " $self completion
    "   my $self
    " to 
    "   my $self = shift;
    my $self

    " complete current object methods
    sub testtest { }
    sub foo1 { }
    sub foo2 { }

    $self->

    " smart object method completion
    my $var = new Jifty;
    $var->

    " smart object method completion 2
    my $var = Jifty::DBI->new;
    $var->

    my %hash = ( );
    my @array = ( );

